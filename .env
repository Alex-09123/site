<<EOF
# Порт, на котором будет слушать API
PORT=4000

# Строка подключения к уже установленному MongoDB
MONGO_URI=mongodb://localhost:27017/mySiteDB   # ← имя БД произвольное

# Секретный ключ для подписи JWT (замените на свой)
JWT_SECRET=$(openssl rand -base64 32)

# Как долго живёт токен
TOKEN_EXPIRES=30d

# Путь к папке, куда сохраняются аватары (относительно server/)
AVATAR_UPLOAD_PATH=../public/uploads

# Максимальный размер аватара (1 МБ)
MAX_AVATAR_SIZE=1048576
EOF